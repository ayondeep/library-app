<div class="jumbotron text-center">
  <h1>Contact Us</h1>

  <br/><br/>

  <div class="form-horizontal form-group form-group-lg row">
     <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{input type="email" class="form-control" placeholder="Please type your email" autofocus="autofocus"  rows="7" value=emailAddress }}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      {{textarea class="form-control" placeholder="Please type you message" autofocus="autofocus"  rows="7" value=myMessage }}
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
        <button disabled={{isDisabled}} class="btn btn-primary btn-lg btn-block"  {{action 'saveMessage'}}>Save</button>
    </div>
  </div>

 {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
   {{/if}}
  <br/><br/>
</div>